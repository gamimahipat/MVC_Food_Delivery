@model MVC_Food_Delivery.Models.Order_Master

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="page-title-area" style="height:150px">
    <img src="~/Images/2.jpg" style="height: 240px; width: 600px" alt="Title">
    <div class="container">
        <div class="page-title-content">
            <h2>Update Data</h2>
            <ul>
                @*<li>
                        <a href="index.html">@Session["Username"]</a>
                    </li>*@
                @*<li>
                        <i class='bx bx-chevron-right'></i>
                    </li>
                    <li>Sign In</li*@
            </ul>
        </div>
    </div>
</div>
<br />
<h6 class="text-danger"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;* Delivery Status Edit Only</h6>
<div class="signup-area pt-100 pb-70">

    <div class="container">
        <div class="row align-items-center">

            <div>
                <div class="signup-item">
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(model => model.OrderID)
                        @Html.HiddenFor(model => model.CustomerID)

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Delivery Status <i class="fa fa-star text-danger"></i></label>
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.DeliveryStatus, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DeliveryStatus, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Coock Status </label>
                                    @*@Html.LabelFor(model => model.CoockStatus, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.CoockStatus, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.CoockStatus, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PaymentStatus, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <div class="checkbox ">


                                            @Html.EditorFor(model => model.PaymentStatus, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.PaymentStatus, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Customer Name:</label>
                                    @*@Html.LabelFor(model => model.CustomerID, "CustomerID", htmlAttributes: new { @class = "" })*@
                                    <div class="col-md-10">

                                        @Html.EditorFor(model => model.Customer_Master.CustomerName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                                        @*@Html.DropDownList("CustomerID", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.OrderDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TotalPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            @Html.HiddenFor(model => model.PaymentStatus)
                            @Html.HiddenFor(model => model.CoockStatus)


                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn signup-btn">Update</button>
                        </div>
                    }

                    <div class="cmn-btn text-center">
                        <a class="banner-btn-center text-center" style="width:151px;height:56px;padding-top:15px" href="@Url.Action("Index", "Delivery")">

                            <b> Back To List</b>
                        </a>

                    </div>



                </div>
            </div>
        </div>
    </div>
</div>

































