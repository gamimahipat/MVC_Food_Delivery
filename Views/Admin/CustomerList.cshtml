@model IEnumerable<MVC_Food_Delivery.Models.Customer_Master>

@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Adminpage.cshtml";
}

<h2>CustomerList</h2>

<div class="row">

    <div class="col-12">

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Orders List</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="table-responsive">
                    <table id="productorder" class="table" style="width:100%">
                        <thead class="bg-info text-center">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CustomerName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MobileNumber)
                                </th>
                                <th>
                                    Address
                                </th>
                                <th style="width:283px">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>

                                <th>Action</th>




                            </tr>
                        </thead>
                        <tbody class="bg-cyan text-center">
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MobileNumber)
                                    </td>
                                    <td>
                                        @item.HouseNumber,@item.Street,@item.City-@item.PostalCode
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>

                                    <td>
                                        @if (item.ISActive == true)
                                        {
                                            <a href="@Url.Action("UserActiveInactive", "Admin", new { id = item.CustomerID })" data-id="@item.CustomerID" class="btn btn-icon-square btn-success" data-original-title="Active" data-toggle="tooltip">
                                                @*<i class="fa fa-user-unlock fa-2x"></i>*@
                                                <i class="ti-unlock  "></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("UserActiveInactive", "Admin", new { id = item.CustomerID })" data-id="@item.CustomerID" class="btn btn-icon-square btn-danger" data-original-title="Inactive" data-toggle="tooltip">
                                                @*<i class="fa-solid fa fa-user-lock"></i>*@
                                                <i class="ti-lock "></i>
                                            </a>
                                        }


                                    </td>

                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>

</div>












