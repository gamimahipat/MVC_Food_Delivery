@model IEnumerable<MVC_Food_Delivery.Models.Order_Master>

@{
    ViewBag.Title = "OrderView";
    Layout = "~/Views/Shared/_Adminpage.cshtml";
}




<div class="row">

    <div class="col-12">

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Orders List</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="table-responsive">
                    <table id="productorder" class="table" style="width:100%">
                        <thead class="bg-info text-center">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer_Master.CustomerName)
                                </th>
                                <th>
                                   
                                    @Html.DisplayNameFor(model => model.OrderDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TotalPrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PaymentStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CoockStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeliveryStatus)
                                </th>


                             
                            </tr>
                        </thead>
                        <tbody class="bg-cyan text-center">
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer_Master.CustomerName)
                                </td>
                                <td>
                                    @item.OrderDate.Value.ToShortDateString()
                                    @*@Html.DisplayFor(modelItem => item.OrderDate)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CoockStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeliveryStatus)
                                </td>


                            </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>

</div>





