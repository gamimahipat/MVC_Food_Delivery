<section class="invoice printableArea">
    <!-- title row -->
    @*<div class="row">
        <div class="col-12">
            <div class="page-header">
                <h2 class="d-inline"><span class="font-size-30">Invoice Sample</span></h2>
                <div class="pull-right text-right">
                    <h3>22 April 2018</h3>
                </div>
            </div>
        </div>*@
    <!-- /.col -->
    @*</div>*@
    <!-- info row -->
 
    <div class="row invoice-info">
        <div class="col-md-6 invoice-col">
            <strong>From</strong>
            <address>
                <strong class="text-blue font-size-24">Prompt Softech</strong><br>
                <strong class="d-inline">12 SF, Maurya Times Square Science City Rd, Sola,Ahmedabad Gujarat 380061</strong><br>
                <strong>Phone: 075730 02234 &nbsp;&nbsp;&nbsp;&nbsp; Email: prompt@promptsoftech.com</strong>
            </address>
        </div>
        <!-- /.col -->
        <div class="col-md-6 invoice-col text-right">
            <strong>To</strong>
            <address>
                <strong class="text-blue font-size-24">@Session["CustomerName"]</strong><br>
                @Session["HouseNumber"],@Session["Street"],@Session["City"]-@Session["PostalCode"]<br>
                <strong>Phone: @Session["Number"] &nbsp;&nbsp;&nbsp;&nbsp; Email: @Session["Email"]</strong>
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-12 invoice-col mb-15">
            <div class="invoice-details row no-margin">
                @*<div class="col-md-6 col-lg-3"><b>Invoice </b>@Session["OrderID"]</div>*@
                <div class="col-md-6 col-lg-3"><b>Order ID:</b> @Session["OrderID"]</div>
                <div class="col-md-6 col-lg-3"><b>Order Date:</b> @Session["OrderDate"]</div>
                <div class="col-md-6 col-lg-3"><b>Amount:</b>₹@Session["OrderTotalPrice"]</div>
                <div class="col-md-6 col-lg-3"><b>Payment Date:</b>@Session["paymentdate"]</div>
               
            </div>
        </div>
        <!-- /.col -->
    </div>
  
    <div class="row">
        <div class="col-12 table-responsive">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th><b>No</b></th>
                        <th><b>Product Name</b></th>
                        <th><b>Product Price</b></th>
                        <th ><b>Quantity</b></th>
                        <th ><b>Payment Type</b></th>
                        <th ><b>Total Amount</b></th>
                    </tr>
                    @{int a = 0;

                    }
                    @foreach (var item in Model)
                    {
                        {
                            a++;

                        }
                        <tr>
                            <td>
                                @a
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product_Master.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product_Master.ProductPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.order_Details_Master.Quantity)
                            </td>
                            <td>
                                Bank
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.order_Details_Master.TotalAmount)
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-12 text-right">
           
                @*<p class="lead"><b>Payment</b><span class="text-danger"> </span></p>*@

                <!--<div>-->
                    @*<p>Sub - Total amount  : ₹@Session["OrderTotalPrice"]</p>*@
                    @*<p>Tax (18%)  :  $646.56</p>
                    <p>Shipping  :  $110.44</p>*@
                <!--</div>-->
                <div class="total-payment">
                    <h3><b>Total Payment:</b>  ₹@Session["OrderTotalPrice"]</h3>
                </div>
          
            </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-12 text-right">
            @*<button type="button" class="btn btn-success pull-right">
                <i class="fa fa-credit-card"></i> Submit Payment
            </button>
            <button type="button" class="btn btn-danger pull-right mr-5">
                <i class="fa fa-download"></i> Generate PDF
            </button>*@
            <button id="print" class="btn btn-danger" type="button"> <span><i class="fa fa-print"></i> Generate PDF</span> </button>

        </div>
    </div>
</section>
