
@{
    ViewBag.Title = "Index";
}



<section class="checkout-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="checkout-item">
                    <h2>Customer Details</h2>
                    <div class="checkout-one">
                        <form action="@Url.Action("CreateOrder", "Payment")" method="POST">
                           
                            <div class="form-group">
                                <label>Name:</label>
                                <input value="@Session["Username"]" readonly type="text" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Number:</label>
                                <input value="@Session["Number"]" readonly type="text" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Address:</label>
                                <input value="@Session["HouseNumber"], @Session["Street"], @Session["City"], @Session["PostalCode"]" readonly type="text" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Email:</label>
                                <input value="@Session["Email"]" readonly type="text" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Price</label>
                                <input value="@Session["price"]" readonly type="text" class="form-control">
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn checkout-btn">Make Payment</button>
                                <a href="@Url.Action("AddToCartShoProduct", "Shop")" class="btn checkout-btn">Back</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>







