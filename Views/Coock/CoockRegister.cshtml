@model MVC_Food_Delivery.Models.Staff_Details_Master

@{
    ViewBag.Title = "CoockRegister";
    Layout = "~/Views/Shared/_Adminpage.cshtml";
}


<script>


    $(document).ready(function () {

        var message = "@ViewBag.emassage";

        if (message != "") {
                    

            let timerInterval
            Swal.fire({
                title: message,
                timer: 2000,
                timerProgressBar: true,
                didOpen: () => {
                    Swal.showLoading()
                    const b = Swal.getHtmlContainer().querySelector('b')
                    timerInterval = setInterval(() => {
                        b.textContent = Swal.getTimerLeft()
                    }, 100)
                },
                willClose: () => {
                    clearInterval(timerInterval)
                }
            }).then((result) => {
                if (result.dismiss === Swal.DismissReason.timer) {
                    console.log('I was closed by the timer')
                }
            })






        }




       
    });

</script>



<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">Create Coock</h4>
                </div>
                <div class="box-body">

                    @using (Html.BeginForm("CoockRegister", "Coock", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-body">
                            <div class="row">

                                <input type="hidden" value="2" name="UserID" id="UserID" />

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="text-info">Name</label>
                                        @Html.EditorFor(model => model.WorkerName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.WorkerName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="text-info">Mobile No.</label>
                                        @Html.EditorFor(model => model.WorkerMobileNo, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.WorkerMobileNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="text-info">Address</label>
                                        @Html.EditorFor(model => model.WorkerAddress, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.WorkerAddress, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="text-info">Email</label>
                                        @Html.EditorFor(model => model.WorkerEmail, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.WorkerEmail, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="text-info">Password</label>
                                        @Html.EditorFor(model => model.WorkerPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.WorkerPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions mt-10">
                            <input type="submit" value="Create" class="btn btn-outline btn-success " />
                            @*<button type="submit" class="btn btn-outline btn-success"> <i class="fa fa-check"></i> Create</button>&nbsp;*@
                            <a href="@Url.Action("CooclList", "Coock")" class="btn btn-outline btn-danger">Back To List</a>
                        </div>
                        @*</form>*@
                    }

                </div>
            </div>
        </div>
    </div>

</section>







